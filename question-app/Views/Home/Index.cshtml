<section class="container p-3 m-3">
    <h1 class="text-center">@ViewData["Title"]</h1 </section>
    <section class="container p-3 m-3">
        <div class="row">
            <div class="col-6">
                <h3 class="text-center m-2">@ViewData["HomeQuestionsListTitle"]</h3>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="@Url.Action("Index", "Question")">Ver todas las preguntas</a>
                    </li>
                </ul>
            </div>
            <div class="col-4">
                <h2 class="text-center">LogIn</h2>
                <form id="form-login" class="d-flex align-items-start justify-content-center flex-column p-3 m-3">
                    <div class="form-group w-100">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" />
                        <span class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group w-100">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" />
                        <span class="text-danger"></span>
                    </div>
                    <br>
                    <button id="btn-login" type="submit" class="btn btn-primary w-100">Acceder</button>
                </form>
            </div>
        </div>
    </section>
    <script src="~/js/login.js" asp-append-version="true"></script>
